<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>my-assembly</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <!-- Includes any Python file from the project directory and down, recursively -->
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>**/*.py</include>
            </includes>
            <!-- Python dependencies are handled by the next fileset -->
            <excludes>
                <exclude>dep/**</exclude>
                <!-- requirements.txt is not needed at runtime -->
                <exclude>requirements.txt</exclude>
            </excludes>
        </fileSet>

        <!-- Includes Python dependencies -->
        <fileSet>
            <directory>${project.basedir}/dep</directory>
            <outputDirectory>dep</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>

        <!-- Include the only jar in the target directory (the shaded jar generated by maven-shade-plugin) -->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>

    </fileSets>
</assembly>